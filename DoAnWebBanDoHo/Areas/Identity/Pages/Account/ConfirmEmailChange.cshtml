@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Xác nhận thay đổi Email";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo sử dụng layout chính
}

<div class="main-content-wrapper">
    <div class="login-card">

        <h2>@ViewData["Title"]</h2>
        <hr />

        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <div class="bottom-links mt-4">
            <p class="text-muted">
                Quá trình thay đổi email đã hoàn tất. Bạn có thể quay lại trang
                <a asp-page="./Login" class="font-weight-bold">Đăng nhập</a>.
            </p>
        </div>
    </div>
</div>