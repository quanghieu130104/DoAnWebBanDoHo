@model IEnumerable<DoAnWebBanDoHo.Models.Discount>

@{
    ViewData["Title"] = "Quản lý Mã Giảm Giá";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var pageSize = ViewBag.PageSize;
    var searchTerm = ViewBag.SearchTerm;
    var totalDiscounts = ViewBag.TotalDiscounts;
}

<div class="container py-4">
    <h1 class="display-4 mb-4 text-center">Quản Lý Mã Giảm Giá</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Tạo Mã Giảm Giá Mới</a>
    </p>

    <!-- Form tìm kiếm và số lượng hiển thị -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchTerm" placeholder="Tìm kiếm theo mã, loại, áp dụng cho..." value="@searchTerm" />
                    <button class="btn btn-outline-primary" type="submit">Tìm kiếm</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Xóa tìm kiếm</a>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <span class="text-muted">Tổng số mã giảm giá: @totalDiscounts</span>
            </div>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Giảm Giá</th>
                        <th>Loại Giảm Giá</th>
                        <th>Giá Trị</th>
                        <th>Đơn Hàng Tối Thiểu</th>
                        <th>Ngày Bắt Đầu</th>
                        <th>Ngày Kết Thúc</th>
                        <th>Kích Hoạt</th>
                        <th>Giới Hạn Sử Dụng</th>
                        <th>Đã Sử Dụng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle fw-bold">@Html.DisplayFor(modelItem => item.Code)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.DiscountType)</td>
                            <td class="align-middle">
                                @if (item.DiscountType == "Percentage")
                                {
                                    <span>@item.DiscountValue.ToString("N0")%</span>
                                }
                                else if (item.DiscountType == "FixedAmount")
                                {
                                    <span>@item.DiscountValue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                }
                                else
                                {
                                    <span>@Html.DisplayFor(modelItem => item.DiscountValue)</span>
                                }
                            </td>
                            <td class="align-middle">
                                @(item.MinimumOrderAmount.HasValue ? item.MinimumOrderAmount.Value.ToString("C0", new System.Globalization.CultureInfo("vi-VN")) : "Không")
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.StartDate)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.EndDate)</td>
                            <td class="align-middle text-center">
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Có</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Không</span>
                                }
                            </td>
                            <td class="align-middle">
                                @(item.UsageLimit.HasValue ? item.UsageLimit.Value.ToString() : "Không giới hạn")
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.UsedCount)</td>
                            <td class="align-middle text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mb-1">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white mb-1">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-1">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Không tìm thấy mã giảm giá nào phù hợp.
        </div>
    }
</div>
