@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Xác nhận Email";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo sử dụng layout chính
}

<div class="main-content-wrapper">
    <div class="login-card">

        <h2>@ViewData["Title"]</h2>
        <hr />

        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <div class="bottom-links mt-4">
            <p class="text-muted">
                Bạn có thể quay lại trang
                <a asp-page="./Login" class="font-weight-bold">Đăng nhập</a> ngay bây giờ.
            </p>
        </div>
    </div>
</div>