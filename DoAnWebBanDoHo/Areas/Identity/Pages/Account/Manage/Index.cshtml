@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin Cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
    // Áp dụng layout chính để dùng login-card
   
}

<div class="main-content-wrapper">
    <div class="login-card p-4"> @* Sử dụng login-card để căn giữa và định dạng *@

        <h3 class="text-center mb-4">@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <div class="row justify-content-center">
            <div class="col-md-12">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập." disabled />
                        <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Vui lòng nhập số điện thoại."/>
                        <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-custom-dark">LƯU THAY ĐỔI</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}