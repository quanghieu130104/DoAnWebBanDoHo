@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Xác nhận Đặt lại Mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo sử dụng layout chính
}

<div class="main-content-wrapper">
    <div class="login-card">

        <h2>@ViewData["Title"]</h2>
        <hr />

        <p class="text-success fs-5">
            Mật khẩu của bạn đã được **đặt lại thành công**.
        </p>

        <div class="bottom-links mt-4">
            <p class="text-muted">
                Vui lòng
                <a asp-page="./Login" class="font-weight-bold text-primary">bấm vào đây để Đăng nhập</a>.
            </p>
        </div>
    </div>
</div>