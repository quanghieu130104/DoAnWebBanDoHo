@page
@model DownloadPersonalDataModel
@{
    ViewData["Title"] = "Tải xuống Dữ liệu Cá nhân";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="main-content-wrapper">
    <div class="login-card p-4">
        @* Sử dụng login-card để căn giữa và định dạng *@

        <h3 class="text-center mb-4">@ViewData["Title"]</h3>

        <div class="alert alert-info" role="alert">
            <p>
                <strong>Thông tin quan trọng:</strong>
            </p>
            <p class="small mb-0">
                Khi bạn bấm nút bên dưới, hệ thống sẽ chuẩn bị và gửi cho bạn một tệp chứa tất cả dữ liệu cá nhân mà chúng tôi có về tài khoản của bạn.
            </p>
        </div>

        <div class="mt-4">
            <form method="post">
                <button class="w-100 btn btn-lg btn-custom-dark" type="submit">
                    TẢI XUỐNG DỮ LIỆU CỦA TÔI
                </button>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}