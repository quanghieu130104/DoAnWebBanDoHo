@model DoAnWebBanDoHo.Models.Order

@{
    ViewData["Title"] = "Sửa Đơn Hàng: #" + Model.Id;
    // Danh sách các trạng thái đơn hàng
    var orderStatuses = new List<string>
    {
        "Chờ xác nhận",
        "Đã xác nhận",
        "Đang giao",
        "Đã giao",
        "Đã hủy"
    };
}

<div class="container py-4">
    <h1 class="mb-4">Sửa Đơn Hàng: <span class="text-primary">#ORD@Model.Id</span></h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Hiển thị thông tin cơ bản của đơn hàng (read-only) -->
                <div class="card shadow-sm border-0 rounded-lg mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">Thông Tin Đơn Hàng</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Tổng Tiền:</dt>
                            <dd class="col-sm-8 fw-bold text-success">@Model.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</dd>

                            <dt class="col-sm-4">Ngày Đặt Hàng:</dt>
                            <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Người Đặt:</dt>
                            <dd class="col-sm-8">@Model.ReceiverName (@Model.Email)</dd>
                        </dl>
                    </div>
                </div>

                <!-- Trường chọn Trạng thái đơn hàng -->
                <div class="form-group mb-3">
                    <label asp-for="OrderStatus" class="control-label"></label>
                    <select asp-for="OrderStatus" class="form-control">
                        @foreach (var status in orderStatuses)
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="OrderStatus" class="text-danger"></span>
                </div>

                <!-- Trường Ghi chú -->
                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary me-2" />
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info text-white">Xem Chi Tiết</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
