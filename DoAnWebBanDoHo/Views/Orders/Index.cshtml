@model IEnumerable<DoAnWebBanDoHo.Models.Order>

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var pageSize = ViewBag.PageSize;
    var searchTerm = ViewBag.SearchTerm;
    var totalOrders = ViewBag.TotalOrders;
}

<div class="container py-4">
    <h1 class="display-4 mb-4 text-center">Quản Lý Đơn Hàng</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Form tìm kiếm và số lượng hiển thị -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchTerm" placeholder="Tìm kiếm theo mã, tên, email, SĐT..." value="@searchTerm" />
                    <button class="btn btn-outline-primary" type="submit">Tìm kiếm</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Xóa tìm kiếm</a>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <span class="text-muted">Tổng số đơn hàng: @totalOrders</span>
            </div>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Khách Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Phương Thức TT</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">#ORD@Html.DisplayFor(modelItem => item.Id)</td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.ReceiverName)<br />
                                <small class="text-muted">@Html.DisplayFor(modelItem => item.Email)</small>
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.OrderDate)</td>
                            <td class="align-middle fw-bold">@item.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td class="align-middle">
                                @{
                                    string badgeClass = item.OrderStatus switch
                                    {
                                        "Chờ xác nhận" => "bg-warning text-dark",
                                        "Đã xác nhận" => "bg-info text-dark",
                                        "Đang giao" => "bg-primary",
                                        "Đã giao" => "bg-success",
                                        "Đã hủy" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@Html.DisplayFor(modelItem => item.OrderStatus)</span>
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                            <td class="align-middle text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mb-1">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Không tìm thấy đơn hàng nào phù hợp.
        </div>
    }
</div>
