@model IEnumerable<DoAnWebBanDoHo.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var pageSize = ViewBag.PageSize;
    var searchTerm = ViewBag.SearchTerm;
    var totalProducts = ViewBag.TotalProducts;
}

<div class="container py-4">
    <h1 class="display-4 mb-4 text-center">Quản Lý Sản Phẩm</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Tạo Sản Phẩm Mới</a>
    </p>

    <!-- Form tìm kiếm và số lượng hiển thị -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchTerm" placeholder="Tìm kiếm theo tên, mô tả, danh mục..." value="@searchTerm" />
                    <button class="btn btn-outline-primary" type="submit">Tìm kiếm</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Xóa tìm kiếm</a>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <span class="text-muted">Tổng số sản phẩm: @totalProducts</span>
            </div>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Ảnh</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Danh Mục</th>
                        <th>Giá</th>
                        <th>Giá KM</th>
                        <th>Tồn Kho</th>
                        <th>Ngày Tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle text-center" style="width: 100px;">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/80x60/e0e0e0/ffffff?text=No+Image" : item.ImageUrl)"
                                     alt="@item.Name" style="max-width: 80px; height: auto; border-radius: 5px;">
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="align-middle">@(item.Category?.Name ?? "Không xác định")</td>
                            <td class="align-middle">@item.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td class="align-middle">@(item.DiscountedPrice.HasValue ? item.DiscountedPrice.Value.ToString("C0", new System.Globalization.CultureInfo("vi-VN")) : "N/A")</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                            <td class="align-middle text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mb-1">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white mb-1">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-1">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Không tìm thấy sản phẩm nào phù hợp.
        </div>
    }
</div>
