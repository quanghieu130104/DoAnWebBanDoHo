@model IEnumerable<DoAnWebBanDoHo.Models.UserViewModel>

@{
    ViewData["Title"] = "Quản lý Người dùng";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var pageSize = ViewBag.PageSize;
    var searchTerm = ViewBag.SearchTerm;
    var totalUsers = ViewBag.TotalUsers;
}

<div class="container py-4">
    <h1 class="display-4 mb-4 text-center">Quản Lý Người Dùng</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Form tìm kiếm và số lượng hiển thị -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchTerm" placeholder="Tìm kiếm theo email, tên, địa chỉ..." value="@searchTerm" />
                    <button class="btn btn-outline-primary" type="submit">Tìm kiếm</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Xóa tìm kiếm</a>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <span class="text-muted">Tổng số người dùng: @totalUsers</span>
            </div>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Email</th>
                        <th>Họ và tên</th>
                        <th>Địa chỉ</th>
                        <th>Ngày sinh</th>
                        <th>Vai trò</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="align-middle">@(string.IsNullOrEmpty(item.FullName) ? "Chưa có" : item.FullName)</td>
                            <td class="align-middle">@(string.IsNullOrEmpty(item.Address) ? "Chưa có" : item.Address)</td>
                            <td class="align-middle">
                                @(item.DateOfBirth.HasValue && item.DateOfBirth.Value != DateTime.MinValue ? item.DateOfBirth.Value.ToString("dd/MM/yyyy") : "Chưa có")
                            </td>
                            <td class="align-middle">
                                @if (item.Roles != null && item.Roles.Any())
                                {
                                    @foreach (var role in item.Roles)
                                    {
                                        string badgeClass = role switch
                                        {
                                            "Admin" => "bg-danger",
                                            "User" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                        <span class="badge @badgeClass me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Không có vai trò</span>
                                }
                            </td>
                            <td class="align-middle text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mb-1">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-1">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-pageSize="@pageSize" asp-route-searchTerm="@searchTerm" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Không tìm thấy người dùng nào phù hợp.
        </div>
    }
</div>
