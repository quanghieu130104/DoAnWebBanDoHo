@using Microsoft.AspNetCore.Identity
@using DoAnWebBanDoHo.Data
@using DoAnWebBanDoHo.Services
@using DoAnWebBanDoHo.Areas.Identity.Data
@inject CartService CartService
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _context
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - H&H Watches</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoAnWebBanDoHo.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-gold-new.jpg" alt="H&H Watches Logo" style="height: 60px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">TRANG CHỦ</a>
                        </li>
                      

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="categoryDropdownLayout" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        THƯƠNG HIỆU
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="categoryDropdownLayout">
                                        @{
                                            // Lấy danh sách Categories từ DbContext
                                            var categoriesForMenu = _context.Categories.OrderBy(c => c.Name).ToList();
                                        }
                                        @foreach (var category in categoriesForMenu)
                                        {
                                            <li><a class="dropdown-item text-uppercase" asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id">@category.Name</a></li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-uppercase" asp-controller="Home" asp-action="Index">Tất cả sản phẩm</a></li>
                                    </ul>
                                </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    QUẢN LÝ
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Danh Mục</a></li>
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">Sản Phẩm</a></li>
                                    <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">Đơn Hàng</a></li>
                                    <li><a class="dropdown-item" asp-controller="Discounts" asp-action="Index">Mã Giảm Giá</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Người Dùng</a></li>
                                    <li><a class="dropdown-item" asp-controller="Banners" asp-action="Index">Quản lí Banner</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">Báo Cáo Thống Kê</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="searchToggle">
                                @* <<< THÊM ID searchToggle *@
                                <i class="fas fa-search"></i>
                            </a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @CartService.GetCartItemCount()
                                        <span class="visually-hidden">items in cart</span>
                                    </span>
                                </a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>

        <div id="searchBoxContainer" class="search-box-container">
            <div class="container d-flex justify-content-center py-2">
                <form asp-controller="Home" asp-action="Index" method="get" class="input-group search-input-group">
                    <input type="text" name="searchTerm" class="form-control search-input" placeholder="Nhập tên sản phẩm..." aria-label="Tìm sản phẩm">
                    <button class="btn btn-primary search-button" type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div class="floating-contact-buttons">
        <a href="tel:0792126564" class="contact-button phone" title="Gọi điện thoại" target="_blank" aria-label="Gọi điện">
            <i class="fas fa-phone-alt"></i>
            <span class="phone-number">079 212 6564</span>
        </a>
        <a href="https://m.me/YOUR_FACEBOOK_PAGE_ID_OR_USERNAME" class="contact-button messenger" title="Nhắn tin Messenger" target="_blank" aria-label="Nhắn tin Messenger">
            <i class="fab fa-facebook-messenger"></i>
            <span class="button-text">Nhắn Messenger</span>
        </a>
        <a href="https://zalo.me/0792126564" class="contact-button zalo" title="Chat Zalo" target="_blank" aria-label="Chat Zalo">
            <img src="~/images/icons/zalo-icon-white.png" alt="Zalo">
            <span class="button-text">Chat Zalo</span>
        </a>
    </div>
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            <div>&copy; @DateTime.Now.Year - H&H Watches - <a asp-area="" asp-controller="Home" asp-action="Privacy">Bảo Mật</a></div>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>