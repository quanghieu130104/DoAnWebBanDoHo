@model IEnumerable<DoAnWebBanDoHo.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container py-4">
    <h1 class="display-4 mb-4 text-center">Đơn Hàng Của Tôi</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Phương Thức TT</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">#ORD@Html.DisplayFor(modelItem => item.Id)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.OrderDate)</td>
                            <td class="align-middle fw-bold">@item.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td class="align-middle">
                                @{
                                    string badgeClass = item.OrderStatus switch
                                    {
                                        "Chờ xác nhận" => "bg-warning text-dark",
                                        "Đã xác nhận" => "bg-info text-dark",
                                        "Đang giao" => "bg-primary",
                                        "Đã giao" => "bg-success",
                                        "Đã hủy" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@Html.DisplayFor(modelItem => item.OrderStatus)</span>
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                            <td class="align-middle text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Bạn chưa có đơn hàng nào.
        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Bắt đầu mua sắm</a>
        </div>
    }
</div>
