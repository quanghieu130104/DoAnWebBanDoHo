@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Thiết lập Mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml"; // Áp dụng layout chính để dùng login-card
}

<div class="main-content-wrapper">
    <div class="login-card p-4">
        @* Sử dụng login-card để căn giữa và định dạng *@

        <h3 class="text-center mb-4">@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />

        <p class="text-muted text-start mb-2">
            Bạn chưa có mật khẩu cục bộ cho trang web này. Vui lòng thiết lập mật khẩu bằng cách điền vào mẫu dưới đây.
        </p>
        <p class="text-muted text-start mb-4">
            Việc này sẽ cho phép bạn đăng nhập mà không cần sử dụng tài khoản bên ngoài.
        </p>

        <div class="row justify-content-center">
            <div class="col-md-12">
                <form id="set-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu mới." />
                        <label asp-for="Input.NewPassword" class="form-label">Mật khẩu mới</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu mới." />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận Mật khẩu mới</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-custom-dark">THIẾT LẬP MẬT KHẨU</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}